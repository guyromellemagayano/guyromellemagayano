{
  "name": "guyromellemagayano",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "commit": "czg gpg",
    "dev": "turbo run dev --parallel",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\" --write",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx,json,css,md,mdx}\" --check",
    "lint": "turbo run lint",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run lint",
      "pnpm run format",
      "pnpm run test"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@guyromellemagayano/eslint-config": "workspace:*",
    "@guyromellemagayano/prettier-config": "workspace:*",
    "@guyromellemagayano/typescript-config": "workspace:*",
    "czg": "^1.11.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "turbo": "^2.5.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=20"
  }
}
