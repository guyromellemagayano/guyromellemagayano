{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Full stack developer, open-source enthusiast, and a minimalist",
  "license": "MIT",
  "author": "Guy Romelle Magayano <aspiredtechie2010@gmail.com> (https://www.guyromellemagayano.dev)",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "commit": "czg gpg",
    "dev": "turbo run dev --parallel",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,css,md,mdx,json,jsonc}": [
      "pnpm format"
    ],
    "**/*.{js,ts,tsx}": [
      "pnpm lint"
    ],
    "**/*.{ts,tsx}": [
      "pnpm test"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/czg",
      "useEmoji": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@commitlint/types": "^19.8.1",
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "czg": "^1.11.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.12",
    "prettier-plugin-pkg": "^0.19.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.3"
  },
  "peerDependencies": {
    "eslint": "^9.25.1",
    "typescript": "^5.8"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
